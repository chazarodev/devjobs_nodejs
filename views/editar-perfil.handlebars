<main class="contenedor">
    <form action="/editar-perfil" method="post" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Tu nombre" value={{usuario.nombre}}>
        </div>
        <div class="campo">
            <label for="email">E-mail</label>
            <input type="email" name="email" placeholder="Tu e-mail" value={{usuario.email}}>
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Tu password">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar cambios">
        </div>
    </form>
</main>